@model EleVehicleDealer.Domain.DTOs.Cart.CartDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Shopping Cart";
    var username = Context.Session?.GetString("Username") ?? string.Empty;
    var isLoggedIn = !string.IsNullOrEmpty(username);
}

<header class="site-header">
    <div class="header-container">
        <div class="logo-section">
            <a asp-controller="Home" asp-action="Index" class="logo">EleVehicle Dealer</a>
        </div>
        <nav class="main-navigation">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Cart" asp-action="Index" class="active">Cart</a></li>
            </ul>
        </nav>
        <div class="auth-section">
            @if (isLoggedIn)
            {
                <a asp-controller="Cart" asp-action="Index" class="cart-icon">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="cart-badge" id="cartBadge">@Model.TotalItems</span>
                </a>
                <span class="welcome">Welcome, @username</span>
                <a asp-controller="Account" asp-action="Logout" class="btn-logout">Logout</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn-login">Login</a>
                <a asp-controller="Account" asp-action="Register" class="btn-register">Register</a>
            }
        </div>
    </div>
</header>

<div class="main-container">
    <h2><i class="fas fa-shopping-cart"></i> Shopping Cart</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    @if (Model.Items.Count == 0)
    {
        <div class="empty-cart">
            <i class="fas fa-shopping-cart"></i>
            <h3>Your cart is empty</h3>
            <p>Add some vehicles to get started!</p>
            <a asp-controller="Home" asp-action="Index" class="btn-continue">
                <i class="fas fa-arrow-left"></i> Continue Shopping
            </a>
        </div>
    }
    else
    {
        <div class="cart-content">
            <div class="cart-items">
                @{int cartIndex = 0;}
                @foreach (var item in Model.Items)
                {
                    var imageUrl = $"/images/{item.ImageName}";
                    var placeholderUrl = $"https://via.placeholder.com/150x150/667eea/ffffff?text={System.Web.HttpUtility.UrlEncode(item.Model)}";
                    
                    <div class="cart-item">
                        <div class="item-image">
                            <img id="cart-img-@cartIndex"
                                 src="@imageUrl"
                                 alt="@item.Model"
                                 style="width: 100%; height: 100%; object-fit: cover;"
                                 onerror="this.src='@placeholderUrl'; this.onerror=null;" />
                        </div>
                        <div class="item-details">
                            <h4>@item.Model</h4>
                            <p><strong>Type:</strong> <span class="badge-info">@item.Type</span></p>
                            <p><strong>Color:</strong> <span class="badge-color">@item.Color</span></p>
                            <p class="price">@item.Price.ToString("C")</p>
                        </div>
                        <div class="item-quantity">
                            <label>Quantity:</label>
                            <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="quantity-form">
                                <input type="hidden" name="vehicleId" value="@item.VehicleId" />
                                <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn-qty btn-minus" @(item.Quantity <= 1 ? "disabled" : "")>
                                    <i class="fas fa-minus"></i>
                                </button>
                                <span class="quantity">@item.Quantity</span>
                                <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn-qty btn-plus">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </form>
                        </div>
                        <div class="item-total">
                            <label>Total:</label>
                            <p class="total-price">@item.TotalPrice.ToString("C")</p>
                        </div>
                        <div class="item-remove">
                            <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="vehicleId" value="@item.VehicleId" />
                                <button type="submit" class="btn-remove" title="Remove @item.Model from cart">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    cartIndex++;
                }
            </div>

            <div class="cart-summary">
                <div class="summary-header">
                    <i class="fas fa-clipboard-list"></i>
                    <h3>Order Summary</h3>
                </div>
                
                <div class="summary-content">
                    <div class="summary-row subtotal">
                        <div class="summary-label">
                            <i class="fas fa-shopping-basket"></i>
                            <span>Subtotal</span>
                        </div>
                        <span class="value">@Model.TotalAmount.ToString("C")</span>
                    </div>
                    
                    <div class="summary-row items">
                        <div class="summary-label">
                            <i class="fas fa-box"></i>
                            <span>Total Items</span>
                        </div>
                        <span class="value">@Model.TotalItems</span>
                    </div>
                    
                    <div class="summary-divider"></div>
                    
                    <div class="summary-row total">
                        <div class="summary-label">
                            <i class="fas fa-wallet"></i>
                            <span>Total Amount</span>
                        </div>
                        <span class="value">@Model.TotalAmount.ToString("C")</span>
                    </div>
                    
                    <div class="savings-badge">
                        <i class="fas fa-tag"></i>
                        <span>Free Shipping on all electric vehicles!</span>
                    </div>
                </div>
                
                <div class="cart-actions">
                    <a asp-controller="Order" asp-action="Checkout" class="btn-checkout">
                        <i class="fas fa-credit-card"></i>
                        <span>Proceed to Checkout</span>
                    </a>
                    <form asp-controller="Cart" asp-action="ClearCart" method="post" style="width: 100%;">
                        <button type="submit" class="btn-clear-cart" onclick="return confirm('Are you sure you want to clear the cart?')">
                            <i class="fas fa-trash"></i>
                            <span>Clear Cart</span>
                        </button>
                    </form>
                    <a asp-controller="Home" asp-action="Index" class="btn-continue">
                        <i class="fas fa-arrow-left"></i>
                        <span>Continue Shopping</span>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

