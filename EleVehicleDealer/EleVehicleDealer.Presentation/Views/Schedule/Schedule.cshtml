@model IEnumerable<EleVehicleDealer.Domain.EntityModels.Schedule>
@using EleVehicleDealer.Domain.EntityModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="main-container">
    <h2 class="page-title">Schedule Management</h2>

    <!-- Hiển thị thông báo -->
    @if (TempData["Message"] != null)
    {
        <div class="custom-alert success mb-20" role="alert">
            @TempData["Message"]
            <button type="button" class="close-btn" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="custom-alert error mb-20" role="alert">
            @TempData["Error"]
            <button type="button" class="close-btn" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }

    <!-- Nút mở modal -->
    <button type="button" id="openCreateModal" class="submit-btn mb-20">Create New Schedule</button>

    <!-- Modal form tạo lịch trình -->
    <div class="modal fade" id="createScheduleModal" tabindex="-1" role="dialog" aria-labelledby="createScheduleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createScheduleModalLabel">Create Schedule</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-container">
                        <div class="form-header">
                            <h4>Create Schedule</h4>
                        </div>
                        <div class="form-body">
                            <form id="createScheduleForm" asp-controller="Schedule" asp-action="Create" method="post" class="schedule-form">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false, "", new { @class = "error-message" })
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="CustomerId">Customer ID</label>
                                        <input id="CustomerId" name="CustomerId" type="number" class="input-field" min="1" required />
                                        <span class="error-message" data-valmsg-for="CustomerId" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="StationCarId">Station Car ID</label>
                                        <input id="StationCarId" name="StationCarId" type="number" class="input-field" min="1" required />
                                        <span class="error-message" data-valmsg-for="StationCarId" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="Status">Status</label>
                                        <div class="radio-container">
                                            <div>
                                                <input type="radio" id="Status_Pending" name="Status" value="Pending" checked />
                                                <label class="radio-label" for="Status_Pending">Pending</label>
                                            </div>
                                            <div>
                                                <input type="radio" id="Status_Confirmed" name="Status" value="Confirmed" />
                                                <label class="radio-label" for="Status_Confirmed">Confirmed</label>
                                            </div>
                                            <div>
                                                <input type="radio" id="Status_Cancelled" name="Status" value="Cancelled" />
                                                <label class="radio-label" for="Status_Cancelled">Cancelled</label>
                                            </div>
                                        </div>
                                        <span class="error-message" data-valmsg-for="Status" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="ScheduleTime">Schedule Time</label>
                                        <input id="ScheduleTime" name="ScheduleTime" class="input-field" type="datetime-local" required value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                        <span class="error-message" data-valmsg-for="ScheduleTime" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label for="IsActive">Is Active</label>
                                        <div class="checkbox-container">
                                            <input type="hidden" name="IsActive" value="false" />
                                            <input id="IsActive" name="IsActive" type="checkbox" class="input-field" value="true" checked />
                                            <label class="checkbox-label" for="IsActive">Yes</label>
                                        </div>
                                        <span class="error-message" data-valmsg-for="IsActive" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="form-group submit-group">
                                        <button type="submit" class="submit-btn">Create</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách lịch trình -->
    <div class="schedule-grid">
        <h4>All Schedules</h4>
        @if (Model != null && Model.Any())
        {
            foreach (var schedule in Model)
            {
                <div class="schedule-card">
                    <div class="schedule-card-content">
                        <h5>Schedule #@schedule.ScheduleId</h5>
                        <p><strong>Customer ID:</strong> @schedule.CustomerId</p>
                        <p><strong>Station Car ID:</strong> @schedule.StationCarId</p>
                        <p><strong>Status:</strong> @schedule.Status</p>
                        <p><strong>Schedule Time:</strong> @schedule.ScheduleTime.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong>Created At:</strong> @schedule.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong>Updated At:</strong> @(schedule.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                        <p><strong>Is Active:</strong> @(schedule.IsActive ? "Yes" : "No")</p>
                        <form asp-action="UpdateStatus" method="post" style="margin-top: 10px;">
                            <input type="hidden" name="id" value="@schedule.ScheduleId" />
                            <button type="submit" name="status" value="Complete" class="status-btn complete">Complete</button>
                            <button type="submit" name="status" value="Cancel" class="status-btn cancel">Cancel</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No schedules found.</p>
        }
    </div>
</div>

