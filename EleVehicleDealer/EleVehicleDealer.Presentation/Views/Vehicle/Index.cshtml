@model IEnumerable<EleVehicleDealer.DAL.EntityModels.Account>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Account Management";
}

<div class="container">
    <h2 class="title">Account Management</h2>

@if (editVehicle != null)
{
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chỉnh sửa xe</h4>
        </div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }
            <!-- Sử dụng model Vehicle trực tiếp -->
            <form asp-controller="Vehicle" asp-action="Edit" method="post" class="row g-3" asp-antiforgery="true">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" name="VehicleId" value="@editVehicle.VehicleId" />
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Model" class="form-label">Model</label>
                        <input name="Model" class="form-control" value="@editVehicle.Model" required />
                        <span asp-validation-for="@editVehicle.Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.Type" class="form-label"></label>
                        <input asp-for="@editVehicle.Type" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.Color" class="form-label"></label>
                        <input asp-for="@editVehicle.Color" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.Price" class="form-label"></label>
                        <input asp-for="@editVehicle.Price" class="form-control" step="0.01" required />
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Account List -->
    <div class="box">
        <div class="box-header gray">Account List</div>
        <div class="box-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td>@account.Username</td>
                            <td>@account.Email</td>
                            <td>@account.ContactNumber</td>
                            <td>
                                <span class="badge @(account.IsActive ? "active" : "inactive")">
                                    @(account.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Account" asp-route-id="@account.AccountId" class="btn orange">Edit</a>
                                <form asp-action="Delete" asp-controller="Account" asp-route-id="@account.AccountId" method="post" style="display:inline">
                                    <button type="submit" class="btn red">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- CSS của bạn giữ nguyên -->
<style>
    body {
        font-family: Arial, sans-serif;
        background: #f5f7fa;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 1000px;
        margin: auto;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
    }

    .box {
        background: #fff;
        border-radius: 8px;
        margin-bottom: 20px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .box-header {
        padding: 10px 15px;
        font-weight: bold;
    }

        .box-header.blue {
            background: #3498db;
            color: #fff;
        }

        .box-header.gray {
            background: #7f8c8d;
            color: #fff;
        }

    .box-body {
        padding: 15px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

        .form-grid label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-grid input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

    .form-actions {
        margin-top: 15px;
        text-align: right;
    }

    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
    }

        .btn.green {
            background: #2ecc71;
        }

        .btn.orange {
            background: #e67e22;
        }

        .btn.red {
            background: #e74c3c;
        }

        .btn.gray {
            background: #7f8c8d;
        }

        .btn:hover {
            opacity: 0.9;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .table th {
            background: #34495e;
            color: #fff;
        }

    .badge {
        padding: 4px 10px;
        border-radius: 12px;
        color: #fff;
        font-size: 12px;
    }

        .badge.active {
            background: #27ae60;
        }

        .badge.inactive {
            background: #c0392b;
        }
</style>
