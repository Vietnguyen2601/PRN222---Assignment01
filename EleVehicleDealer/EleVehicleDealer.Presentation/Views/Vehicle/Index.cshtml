@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Vehicle Management";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<EleVehicleDealer.Domain.EntityModels.Vehicle>
@{
    var editVehicle = ViewBag.EditVehicle as EleVehicleDealer.Domain.EntityModels.Vehicle;
    var message = TempData["Message"] as string;
    var error = TempData["Error"] as string;
}

<!-- Hiển thị thông báo -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        @message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        @error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (editVehicle != null)
{
    <div class="card shadow-sm">
        <div class="card-header" style="background: var(--primary-gradient); color: white;">
            <h4 class="mb-0">Chỉnh sửa xe</h4>
        </div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }
            <form asp-controller="Vehicle" asp-action="Update" method="post" class="row g-3" asp-antiforgery="true">
                <input type="hidden" name="VehicleId" value="@editVehicle.VehicleId" />
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.Model" class="form-label">Model</label>
                        <input asp-for="@editVehicle.Model" class="form-control" name="Model" required />
                        <span asp-validation-for="@editVehicle.Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.Type" class="form-label">Type</label>
                        <input asp-for="@editVehicle.Type" class="form-control" name="Type" required />
                        <span asp-validation-for="@editVehicle.Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.Color" class="form-label">Color</label>
                        <input asp-for="@editVehicle.Color" class="form-control" name="Color" />
                        <span asp-validation-for="@editVehicle.Color" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.Price" class="form-label">Price</label>
                        <input asp-for="@editVehicle.Price" class="form-control" name="Price" step="0.01" required />
                        <span asp-validation-for="@editVehicle.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@editVehicle.IsActive" class="form-label">Trạng thái</label>
                        <input asp-for="@editVehicle.IsActive" type="checkbox" name="IsActive" />
                        <span asp-validation-for="@editVehicle.IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header" style="background: var(--primary-gradient); color: white;">
            <h4 class="mb-0">Create Vehicle</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Vehicle" asp-action="Create" method="post" class="row g-3" asp-antiforgery="true">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.First().Model" class="form-label">Model</label>
                        <input asp-for="@Model.First().Model" class="form-control" required />
                        <span asp-validation-for="@Model.First().Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.First().Type" class="form-label">Loại</label>
                        <input asp-for="@Model.First().Type" class="form-control" required />
                        <span asp-validation-for="@Model.First().Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.First().Color" class="form-label">Màu sắc</label>
                        <input asp-for="@Model.First().Color" class="form-control" />
                        <span asp-validation-for="@Model.First().Color" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.First().Price" class="form-label">Giá</label>
                        <input asp-for="@Model.First().Price" class="form-control" step="0.01" required />
                        <span asp-validation-for="@Model.First().Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.First().IsActive" class="form-label">Trạng thái</label>
                        <input asp-for="@Model.First().IsActive" type="checkbox" class="form-check-input" checked />
                        <span asp-validation-for="@Model.First().IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg">Create</button>
                </div>
            </form>
        </div>
    </div>
}

<div class="card shadow-sm mt-4">
    <div class="card-header" style="background: var(--primary-gradient); color: white; display: flex; justify-content: space-between; align-items: center; padding: 10px 20px;">
        <h4 class="mb-0">Vehicle List</h4>
        <a asp-action="Catalog" class="btn btn-light btn-sm">View Catalog</a>
    </div>
    <div class="card-body">
        <form asp-action="Compare" method="get">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Model</th>
                        <th>Type</th>
                        <th>Color</th>
                        <th>Price</th>
                        <th>Station</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="vehicleIds" value="@v.VehicleId" class="form-check-input" />
                            </td>
                            <td>@v.Model</td>
                            <td>@v.Type</td>
                            <td>@v.Color</td>
                            <td>$@v.Price.ToString("C")</td>
                            <td>
                                @(v.StationCars.FirstOrDefault()?.Station?.StationName ?? "N/A")
                            </td>
                            <td>
                                @if (v.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Vehicle" asp-action="Index" asp-route-editId="@v.VehicleId" class="btn btn-edit me-2">Edit</a>
                                <form asp-controller="Vehicle" asp-action="Delete" method="post" style="display:inline">
                                    <input type="hidden" name="id" value="@v.VehicleId" />
                                    <button type="submit" class="btn btn-delete" onclick="return confirm('Soft delete this vehicle?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="table-actions">
                <button type="submit" class="btn-compare btn-lg">Compare Selected</button>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea, #764ba2);
        --secondary-gradient: linear-gradient(135deg, #28a745, #20c997);
        --admin-bg: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        --shadow-light: 0 2px 6px rgba(0, 0, 0, 0.1);
        --shadow-hover: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .card {
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-2px);
        }

    .card-header {
        border-radius: 8px 8px 0 0;
        padding: 10px;
    }

    .form-control {
        border-radius: 5px;
        border-color: #ddd;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 5px rgba(102, 126, 234, 0.5);
        }

    .btn-primary {
        background: var(--secondary-gradient);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #218838, #1ea085);
            transform: translateY(-1px);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #5a6268);
        border: none;
        color: white;
    }

        .btn-secondary:hover {
            background: linear-gradient(135deg, #5a6268, #4e555b);
            transform: translateY(-1px);
        }

    .alert {
        border-radius: 5px;
        padding: 15px;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
    }

        .admin-table th,
        .admin-table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #e1e8ed;
        }

        .admin-table th {
            background: var(--primary-gradient);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .admin-table tr:hover {
            background: #f8f9fa;
        }

    .btn-edit,
    .btn-delete,
    .btn-add {
        padding: 6px 12px;
        border: none;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-right: 5px;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .btn-edit {
        background: var(--secondary-gradient);
        color: white;
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #218838, #1ea085);
            transform: translateY(-1px);
        }

    .btn-delete {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #bd2130, #a71d2a);
            transform: translateY(-1px);
        }

    .btn-add {
        display: inline-block;
        background: var(--primary-gradient);
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-top: 15px;
    }

        .btn-add:hover {
            background: linear-gradient(135deg, #5a6fd8, #6a4190);
            transform: translateY(-1px);
        }

    .table-actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 10px;
        padding: 10px;
        background: #f8f9fa;
        border-radius: 5px;
    }

    .btn-compare {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn-compare:hover {
            background: linear-gradient(135deg, #117a8b, #0f6677);
            transform: translateY(-1px);
        }

    .form-check-input {
        margin: 0;
    }
</style>