        gap: 10px;
    }

    .alert-success {
        background: var(--secondary-gradient);
        color: white;
    }

    .empty-cart {
        text-align: center;
        padding: 80px 40px;
    }

        .empty-cart i {
            font-size: 120px;
            color: #e9ecef;
            margin-bottom: 30px;
        }

        .empty-cart h3 {
            font-size: 2rem;
            color: #6c757d;
            margin-bottom: 15px;
        }

        .empty-cart p {
            font-size: 1.2rem;
            color: #adb5bd;
            margin-bottom: 30px;
        }

    .btn-continue {
        display: inline-block;
        padding: 15px 40px;
        background: var(--primary-gradient);
        color: white;
        text-decoration: none;
        border-radius: 25px;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-light);
    }

        .btn-continue:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

        .btn-continue i {
            margin-right: 8px;
        }

    .cart-content {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 30px;
    }

    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

