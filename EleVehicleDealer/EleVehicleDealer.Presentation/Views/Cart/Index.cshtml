        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
    }

    .item-details .price {
        font-size: 1.4rem;
        font-weight: 700;
        color: #28a745;
        margin-top: 12px;
    }

    .item-quantity {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

        .item-quantity label {
            font-size: 13px;
            font-weight: 600;
            color: #6c757d;
            text-transform: uppercase;
        }

    .quantity-form {
        display: flex;
        align-items: center;
        gap: 12px;
        background: #f8f9fa;
        padding: 8px 15px;
        border-radius: 25px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .btn-qty {
        width: 38px;
        height: 38px;
        border: none;
        background: white;
        color: #667eea;
        border-radius: 50%;
        cursor: pointer;
        font-size: 14px;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-qty:hover:not(:disabled) {
            background: var(--primary-gradient);
            color: white;
            transform: scale(1.1);
        }

        .btn-qty:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .quantity {
        font-size: 18px;
        font-weight: 700;
        color: #2c3e50;
        min-width: 35px;
        text-align: center;
    }

    .item-total {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

        .item-total label {
            font-size: 13px;
            font-weight: 600;
            color: #6c757d;
            text-transform: uppercase;
        }

    .total-price {
        font-size: 1.6rem;
        font-weight: 700;
        color: #28a745;
        margin: 0;
    }

    .btn-remove {
        background: var(--danger-gradient);
        color: white;
        border: none;
        border-radius: 12px;
        width: 50px;
        height: 50px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-light);
        font-size: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

        .btn-remove i {
            transition: all 0.3s ease;
        }

        .btn-remove:hover {
            transform: scale(1.15) rotate(10deg);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.5);
            background: linear-gradient(135deg, #bd2130, #a71d2a);
        }

        .btn-remove:hover i {
            animation: shake 0.5s;
        }

        .btn-remove:active {
            transform: scale(0.95);
        }

    @@keyframes shake {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(-10deg); }
        75% { transform: rotate(10deg); }
    }

    @@media (max-width: 1024px) {
        .cart-content {
            grid-template-columns: 1fr;
        }

        .cart-summary {
            position: static;
        }

        .cart-item {
            grid-template-columns: 100px 1fr;
            gap: 15px;
        }

        .item-quantity,
        .item-total,
        .item-remove {
            grid-column: 1 / -1;
            justify-self: center;
        }
    }

    @@media (max-width: 768px) {
        .cart-item {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .item-image {
            margin: 0 auto;
        }
    }

