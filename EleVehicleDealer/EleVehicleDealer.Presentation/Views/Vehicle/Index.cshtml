@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<EleVehicleDealer.DAL.EntityModels.Vehicle>
@{
    var editVehicle = ViewBag.EditVehicle as EleVehicleDealer.DAL.EntityModels.Vehicle;
    // Loại bỏ isAvailable vì không có Availability
    var message = TempData["Message"] as string;
    var error = TempData["Error"] as string;
    // Lấy StationId từ StationCars (giả định StationCar có StationId)
    var stationId = editVehicle?.StationCars.FirstOrDefault()?.StationId ?? 0;
}

<!-- Hiển thị thông báo -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-success">@message</div>
}
@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
<h2>Vehicle Management</h2>

<div>
    <h4>@(editVehicle != null ? "Edit Vehicle" : "Create Vehicle")</h4>
    <form asp-controller="Vehicle" asp-action="@(editVehicle != null ? "Edit" : "Create")" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (editVehicle != null)
        {
            <input type="hidden" name="VehicleId" value="@editVehicle.VehicleId" />
        }
        <div class="form-group">
            <label>Model</label>
            <input name="Model" class="form-control" value="@(editVehicle?.Model ?? "")" required />
        </div>
        <div class="form-group">
            <label>Type</label>
            <input name="Type" class="form-control" value="@(editVehicle?.Type ?? "")" required />
        </div>
        <div class="form-group">
            <label>Color</label>
            <input name="Color" class="form-control" value="@(editVehicle?.Color ?? "")" required />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input name="Price" class="form-control" type="number" step="0.01" value="@(editVehicle?.Price ?? 0)" required />
        </div>
        <!-- Loại bỏ select Availability -->
        <div class="form-group">
            <label>Station ID</label>
            <input name="StationId" class="form-control" type="number" value="@stationId" />
        </div>
        <button type="submit" class="btn btn-success">@(editVehicle != null ? "Save" : "Create")</button>
        @if (editVehicle != null)
        {
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        }
    </form>
</div>

<hr />

<!-- Danh sách xe -->
<table class="table">
    <thead>
        <tr>
            <th>Model</th>
            <th>Type</th>
            <th>Color</th>
            <th>Price</th>
            <!-- Loại bỏ Availability -->
            <th>Station</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Model</td>
                <td>@v.Type</td>
                <td>@v.Color</td>
                <td>@v.Price</td>
                <td>@(v.StationCars.FirstOrDefault()?.StationId ?? 0)</td>
                <td>
                    <form action="/Vehicle/Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@v.VehicleId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Soft delete this vehicle?')">Delete</button>
                    </form>
                    <a asp-action="Index" asp-route-editId="@v.VehicleId" class="btn btn-primary btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>